{
  "uid": "otel-logs-overview",
  "title": "OTel Logs Overview",
  "timezone": "",
  "schemaVersion": 39,
  "version": 1,
  "style": "dark",
  "tags": ["OTel", "Loki", "Logs"],
  "time": { "from": "now-6h", "to": "now" },
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 0,
  "links": [],
  "liveNow": false,
  "annotations": {
    "list": [
      { "type": "dashboard", "name": "Annotations & Alerts", "hide": true, "enable": true, "builtIn": 1 }
    ]
  },
  "templating": {
    "list": [
      {
        "type": "query",
        "name": "service",
        "label": "service",
        "datasource": "Loki",
        "query": "label_values({service_name=~\".+\"}, service_name)",
        "refresh": 1,
        "includeAll": true,
        "allValue": ".*",
        "multi": true,
        "current": { "selected": false, "text": ["All"], "value": [".*"] }
      },
      {
        "type": "query",
        "name": "level",
        "label": "level",
        "datasource": "Loki",
        "query": "label_values({service_name=~\"$service\"}, level)",
        "refresh": 1,
        "includeAll": true,
        "allValue": ".*",
        "multi": true,
        "current": { "selected": true, "text": ["All"], "value": [".*"] }
      }
    ]
  },
  "panels": [
    {
      "type": "timeseries",
      "title": "Logs Rate by Level",
      "gridPos": { "x": 0, "y": 0, "w": 12, "h": 8 },
      "datasource": "Loki",
      "targets": [
        {
          "refId": "A",
          "expr": "sum by (level) (rate({service_name=~\"$service\", level=~\"$level\"}[$__rate_interval]))",
          "legendFormat": "{{level}}",
          "queryType": "range",
          "range": true
        }
      ],
      "fieldConfig": { "defaults": { "unit": "ops" }, "overrides": [] }
    },
    {
      "type": "timeseries",
      "title": "Logs Rate by Service",
      "gridPos": { "x": 12, "y": 0, "w": 12, "h": 8 },
      "datasource": "Loki",
      "targets": [
        {
          "refId": "A",
          "expr": "topk(10, sum by (service_name) (rate({service_name=~\"$service\", level=~\"$level\"}[$__rate_interval])))",
          "legendFormat": "{{service_name}}",
          "queryType": "range",
          "range": true
        }
      ],
      "fieldConfig": { "defaults": { "unit": "ops" }, "overrides": [] }
    },
    {
      "type": "stat",
      "title": "Error Rate (%)",
      "gridPos": { "x": 0, "y": 8, "w": 6, "h": 6 },
      "datasource": { "type": "__expr__", "uid": "__expr__" },
      "targets": [
        { "refId": "A", "datasource": "Loki", "expr": "sum(rate({service_name=~\"$service\"}[$__rate_interval]))", "queryType": "range", "range": true },
        { "refId": "B", "datasource": "Loki", "expr": "sum(rate({service_name=~\"$service\", level=~\"error|err|fatal|panic\"}[$__rate_interval]))", "queryType": "range", "range": true },
        { "refId": "C", "type": "math", "expression": "100 * $B / clamp_min($A, 1e-9)" }
      ],
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "orientation": "auto",
        "colorMode": "value",
        "graphMode": "none",
        "justifyMode": "auto"
      },
      "fieldConfig": { "defaults": { "unit": "percent" }, "overrides": [] }
    },
    {
      "type": "logs",
      "title": "Recent Logs",
      "gridPos": { "x": 6, "y": 8, "w": 18, "h": 12 },
      "datasource": "Loki",
      "targets": [
        {
          "refId": "A",
          "expr": "{service_name=~\"$service\", level=~\"$level\"} | json",
          "queryType": "range",
          "range": true
        }
      ],
      "options": {
        "dedupStrategy": "none",
        "enableLogDetails": true,
        "prettifyLogMessage": true,
        "showCommonLabels": true,
        "showLabels": true,
        "wrapLogMessage": true,
        "sortOrder": "Descending"
      }
    },
    {
      "type": "logs",
      "title": "Errors (pattern match)",
      "gridPos": { "x": 0, "y": 20, "w": 12, "h": 10 },
      "datasource": "Loki",
      "targets": [
        {
          "refId": "A",
          "expr": "{service_name=~\"$service\"} |~ \"(?i)(error|exception|failed|timeout)\"",
          "queryType": "range",
          "range": true
        }
      ],
      "options": {
        "dedupStrategy": "signature",
        "enableLogDetails": true,
        "prettifyLogMessage": true,
        "showCommonLabels": false,
        "showLabels": true,
        "wrapLogMessage": true,
        "sortOrder": "Descending"
      }
    },
    {
      "type": "timeseries",
      "title": "Error Rate by Service",
      "gridPos": { "x": 12, "y": 20, "w": 12, "h": 10 },
      "datasource": "Loki",
      "targets": [
        {
          "refId": "A",
          "expr": "topk(10, sum by (service_name) (rate({service_name=~\"$service\", level=~\"error|err|fatal|panic\"}[$__rate_interval])))",
          "legendFormat": "{{service_name}}",
          "queryType": "range",
          "range": true
        }
      ],
      "fieldConfig": { "defaults": { "unit": "ops" }, "overrides": [] }
    }
  ]
}

